<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="20230219153459-1" author="amiroxumbayev">
        <preConditions>
            <not>
                <tableExists tableName="group_schedule"/>
            </not>
        </preConditions>
        <createTable tableName="group_schedule">
            <column name="id" type = "uuid" defaultValue="uuid_generate_v4()" valueComputed="UUID()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="group_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="schedule_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="group_schedule"/>
        </rollback>
    </changeSet>

    <changeSet id="20230219153459-2" author="amiroxumbayev">
        <addForeignKeyConstraint baseTableName="group_schedule" baseColumnNames="group_id"
                                 referencedTableName="group" referencedColumnNames="id"
                                 constraintName="group_schedule_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

    <changeSet id="20230219153459-3" author="amiroxumbayev">
        <addForeignKeyConstraint baseTableName="group_schedule" baseColumnNames="schedule_id"
                                 referencedTableName="schedule" referencedColumnNames="id"
                                 constraintName="schedule_group_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

</databaseChangeLog>