<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="20230219153453-1" author="amiroxumbayev">
        <preConditions>
            <not>
                <tableExists tableName="university"/>
            </not>
        </preConditions>
        <createTable tableName="university">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_account_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="university"/>
        </rollback>
    </changeSet>

    <changeSet id="20230219153453-2" author="amiroxumbayev">
        <addForeignKeyConstraint baseTableName="university" baseColumnNames="user_account_id"
                                 referencedTableName="user_account" referencedColumnNames="id"
                                 constraintName="user_account_university_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

</databaseChangeLog>