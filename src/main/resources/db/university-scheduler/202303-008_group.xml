<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="20230219153457-1" author="amiroxumbayev">
        <preConditions>
            <not>
                <tableExists tableName="group"/>
            </not>
        </preConditions>
        <createTable tableName="group">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="course" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="educational_program_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="group" baseColumnNames="educational_program_id"
                                 referencedTableName="educational_program" referencedColumnNames="id"
                                 constraintName="group_ep_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"/>

        <rollback>
            <dropTable tableName="group"/>
        </rollback>
    </changeSet>

</databaseChangeLog>