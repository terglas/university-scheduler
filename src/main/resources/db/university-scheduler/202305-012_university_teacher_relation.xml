<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="20230219153462-1" author="amiroxumbayev">
        <preConditions>
            <tableExists tableName="teacher"/>
        </preConditions>
        <addColumn tableName="teacher">
            <column name="university_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addForeignKeyConstraint baseTableName="teacher" baseColumnNames="university_id"
                                 referencedTableName="university" referencedColumnNames="id"
                                 constraintName="university_teacher_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"/>
        <rollback>
            <dropColumn tableName="teacher" columnName="university_id"/>
        </rollback>
    </changeSet>

</databaseChangeLog>